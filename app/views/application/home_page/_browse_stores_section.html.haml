      .col-md-12
        #owl-demo.owl-carousel.owl-theme
          - unless @browse_stores.blank?
            - @browse_stores.compact.in_groups_of(4,false) do |group|
              - group.each do |advertiser|
                .item.orange
                  .image_box{:style => "background-size:130px;background-position: center;width: 212px;height: 152px;text-align:center;border: 1px solid #e5e5e5;padding-left: 25px;padding-top: 50px;background-image: url('#{ advertiser.hp_advertiser_image.hp_logo.url}');background-repeat: no-repeat;"}
